<h1>Users</h1>

<ul>
<% for user in @users %>
	<li>
		<p><%= image_tag user.avatar.url(:medium) %></p>
		<p>Name: <%= user.name %></p>    
	</li>
<% end %>
</ul>

<h3>Pridať usera</h3>
<%= form_for @user, :html => { :multipart => true } do |f| %>
	<p>
		<%= f.label :name %> <br>
		<%= f.text_field :name %>
	</p>
	<p>
		<%= f.label :avatar %> <br>
		<%= f.file_field :avatar %>
	</p>
	<p>
		<%= f.submit "Vytvoriť" %>
	</p>

<% end %>